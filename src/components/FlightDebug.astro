---
export interface Props {
  flightStats: any;
  flights: any[];
  error?: string;
}

const { flightStats, flights, error } = Astro.props;
---

<div id="flight-debug" class="hidden">
  <pre>{JSON.stringify({ flightStats, flightCount: flights.length, error }, null, 2)}</pre>
</div>

<script define:vars={{ flightStats, flights, error }}>
  console.log('=== FLIGHT DEBUG INFO ===');
  console.log('Flight Stats:', flightStats);
  console.log('Total Flights in stats:', flightStats.totalFlights);
  console.log('Flights array length:', flights.length);
  if (flights.length > 0) {
    console.log('First flight:', flights[0]);
  }
  console.log('Error:', error);
  console.log('=========================');
</script>
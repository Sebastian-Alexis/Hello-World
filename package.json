{
  "name": "personal-website",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "db:setup": "node scripts/setup-database.js",
    "db:migrate": "node scripts/migrate-database.js",
    "db:migrate:lighthouse": "node scripts/migrate-lighthouse-schema.js",
    "db:seed": "node scripts/seed-database.js",
    "db:reset": "rm -f local.db && npm run db:setup && npm run db:seed",
    "db:setup:full": "npm run db:setup && npm run db:migrate:lighthouse && npm run db:seed",
    "type-check": "astro check",
    "lint": "eslint . --ext .ts,.astro,.svelte --max-warnings 20",
    "lint:fix": "eslint . --ext .ts,.astro,.svelte --fix",
    "format": "prettier --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run type-check && npm run lint && npm run test:coverage && npm run test:e2e",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps",
    "lhci:collect": "lhci collect",
    "lhci:upload": "lhci upload",
    "lhci:assert": "lhci assert",
    "lhci:autorun": "lhci autorun",
    "lhci:server": "lhci server",
    "perf:lighthouse": "npm run build && npm run preview & sleep 5 && npm run lhci:collect && npm run lhci:assert",
    "perf:ci": "npm run build && npm run lhci:autorun",
    "perf:gate": "node scripts/performance-gate.cjs",
    "perf:gate:dev": "NODE_ENV=development node scripts/performance-gate.cjs",
    "perf:gate:staging": "NODE_ENV=staging node scripts/performance-gate.cjs",
    "perf:gate:prod": "NODE_ENV=production node scripts/performance-gate.cjs",
    "deploy:check": "npm run test:ci && npm run perf:gate:staging",
    "validate:plan7": "node scripts/validate-plan7.cjs",
    "validate:cwv": "node scripts/validate-core-web-vitals.cjs",
    "validate:caching": "node scripts/validate-caching.cjs",
    "validate:database": "node scripts/validate-database.cjs",
    "validate:tests": "node scripts/validate-tests.cjs",
    "validate:all": "npm run validate:plan7",
    "validate:final": "node scripts/run-final-validation.cjs"
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.4.2",
    "@astrojs/svelte": "^7.1.0",
    "@astrojs/tailwind": "^6.0.2",
    "@deck.gl/core": "^9.1.14",
    "@deck.gl/layers": "^9.1.14",
    "@deck.gl/mapbox": "^9.1.14",
    "@editorjs/code": "^2.9.3",
    "@editorjs/delimiter": "^1.4.2",
    "@editorjs/editorjs": "^2.30.8",
    "@editorjs/embed": "^2.7.6",
    "@editorjs/header": "^2.8.8",
    "@editorjs/image": "^2.10.3",
    "@editorjs/inline-code": "^1.5.2",
    "@editorjs/link": "^2.6.2",
    "@editorjs/list": "^2.0.8",
    "@editorjs/marker": "^1.4.0",
    "@editorjs/quote": "^2.7.6",
    "@editorjs/raw": "^2.5.1",
    "@editorjs/table": "^2.4.5",
    "@editorjs/warning": "^1.4.1",
    "@libsql/client": "^0.15.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^24.1.0",
    "astro": "^5.12.6",
    "astro-compress": "^2.3.8",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.1",
    "isomorphic-dompurify": "^2.26.0",
    "jose": "^6.0.12",
    "lucide-svelte": "^0.534.0",
    "mapbox-gl": "^3.14.0",
    "marked": "^16.1.1",
    "svelte": "^5.37.1",
    "web-vitals": "^5.0.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@lhci/cli": "^0.15.1",
    "@lhci/utils": "^0.15.1",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/svelte": "^5.2.8",
    "@types/mapbox-gl": "^3.4.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-svelte": "^3.11.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-svelte": "^3.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
